<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles/main.css" />
    <title>My Stock Market Tracker App</title>
  </head>
  <body>
    <div class="nav-container">
      <form action="" method="GET">
        <input
          type="text"
          placeholder="Search your stocks..."
          name="inputStock"
        />
      </form>
    </div>

    <div class="main-container1">
      <div class="real-time-stocks-container">
        <div class="real-time-stocks-titles">
          <div class="stock-name">Company name</div>
          <div class="stock-price">Price</div>
          <div class="stock-change">Change</div>
          <div class="stock-change-percentage">% Change</div>
          <div class="stock-days-high-low">Day's High/Low</div>
        </div>

        <div class="stock">
          <div class="stock-name">Apple Inc.</div>
          <div class="stock-price">$174.56</div>
          <div class="stock-change">+$3.45</div>
          <div class="stock-change-percentage">+2.02%</div>
          <div class="stock-days-high-low">$173.00 / $176.00</div>
        </div>
        <div class="stock">
          <div class="stock-name">Microsoft Corporation</div>
          <div class="stock-price">$342.30</div>
          <div class="stock-change">-$1.25</div>
          <div class="stock-change-percentage">-0.36%</div>
          <div class="stock-days-high-low">$341.00 / $345.00</div>
        </div>
        <div class="stock">
          <div class="stock-name">Company name</div>
          <div class="stock-price">Price</div>
          <div class="stock-change">Change</div>
          <div class="stock-change-percentage">% Change</div>
          <div class="stock-days-high-low">Day's High/Low</div>
        </div>
        <div class="stock">
          <div class="stock-name">Company name</div>
          <div class="stock-price">Price</div>
          <div class="stock-change">Change</div>
          <div class="stock-change-percentage">% Change</div>
          <div class="stock-days-high-low">Day's High/Low</div>
        </div>
      </div>
      <div class="line-chart-container"></div>
    </div>

    <div class="main-container2">
      <div class="section num1">
        <div class="section-nav">
          <div class="section-name"><p>Watchlist</p></div>
          <div class="section-date">
            <p><%= currentDate %></p>
            <p><%= currentTime %></p>
          </div>
        </div>
        <div class="section1-main">
          <div class="section1-stocks">
            <div class="section1-stocks-name">
              <h3>A</h3>
              <p>Agilent Technologies, Inc.</p>
            </div>
            <div class="section1-stocks-price">
              <h3>137.67$</h3>
              <p>-0.18%</p>
            </div>
          </div>
        </div>
      </div>

      <div class="section num2">
        <div class="section-nav">
          <div class="section-name"><p>News</p></div>
          <div class="section-date">
            <p><%= currentDate %></p>
            <p><%= currentTime %></p>
          </div>
        </div>

        <div class="section2-main">
          <% if(locals.news){ %> <%news.forEach((item)=>{ %>
          <div class="section2-news-item">
            <img src="<%=item.image%>" alt="<%= item.title%>" />
            <h3><%= item.title%></h3>
            <p><%=item.summary%></p>
            <a href="<%=item.url %>">See more</a>
          </div>
          <%}); %> <% } %>

          <div class="section2-buttons">
            <button class="previous-button"><</button>
            <button class="next-button">></button>
          </div>
        </div>
      </div>
      <div class="section num3">
        <div class="section-nav">
          <div class="section-name"><p>Portfolio</p></div>
          <div class="section-date">
            <p><%= currentDate %></p>
            <p><%= currentTime %></p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
